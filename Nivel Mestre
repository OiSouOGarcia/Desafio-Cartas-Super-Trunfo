#include <stdio.h>

// Função para comparar e mostrar resultado de um atributo
void comparar(const char *nome, float valor1, float valor2, int menorVence) {
    int resultado;
    if (menorVence) {
        resultado = (valor1 < valor2) ? 1 : 0;
    } else {
        resultado = (valor1 > valor2) ? 1 : 0;
    }
    printf("%s: Carta 1 vence? %d\n", nome, resultado);
}

int main() {
    // Variáveis da carta 1
    char codigo1[4]; 
    unsigned long int populacao1;
    float area1, pib1;
    int pontos1;
    float densidade1, pibCapita1, superPoder1;

    // Variáveis da carta 2
    char codigo2[4]; 
    unsigned long int populacao2;
    float area2, pib2;
    int pontos2;
    float densidade2, pibCapita2, superPoder2;

    // -----------------------------
    // Cadastro da Carta 1
    // -----------------------------
    printf("=== Cadastro da Carta 1 ===\n");
    printf("Digite o codigo da carta (ex: A01): ");
    scanf("%s", codigo1);

    printf("Digite a populacao: ");
    scanf("%lu", &populacao1);

    printf("Digite a area: ");
    scanf("%f", &area1);

    printf("Digite o PIB: ");
    scanf("%f", &pib1);

    printf("Digite o numero de pontos turisticos: ");
    scanf("%d", &pontos1);

    // Cálculos automáticos
    densidade1 = populacao1 / area1;
    pibCapita1 = pib1 / populacao1;

    // -----------------------------
    // Cadastro da Carta 2
    // -----------------------------
    printf("\n=== Cadastro da Carta 2 ===\n");
    printf("Digite o codigo da carta (ex: B02): ");
    scanf("%s", codigo2);

    printf("Digite a populacao: ");
    scanf("%lu", &populacao2);

    printf("Digite a area: ");
    scanf("%f", &area2);

    printf("Digite o PIB: ");
    scanf("%f", &pib2);

    printf("Digite o numero de pontos turisticos: ");
    scanf("%d", &pontos2);

    // Cálculos automáticos
    densidade2 = populacao2 / area2;
    pibCapita2 = pib2 / populacao2;

    // -----------------------------
    // Cálculo do Super Poder
    // -----------------------------
    superPoder1 = (1 / densidade1) + pibCapita1 + pib1 + area1 + pontos1 + populacao1;
    superPoder2 = (1 / densidade2) + pibCapita2 + pib2 + area2 + pontos2 + populacao2;

    // -----------------------------
    // Exibição dos dados
    // -----------------------------
    printf("\n=== Cartas Cadastradas ===\n");

    printf("\nCarta 1 - Codigo: %s\n", codigo1);
    printf("Populacao: %lu\n", populacao1);
    printf("Area: %.2f\n", area1);
    printf("PIB: %.2f\n", pib1);
    printf("Pontos Turisticos: %d\n", pontos1);
    printf("Densidade Populacional: %.2f\n", densidade1);
    printf("PIB per Capita: %.2f\n", pibCapita1);
    printf("Super Poder: %.2f\n", superPoder1);

    printf("\nCarta 2 - Codigo: %s\n", codigo2);
    printf("Populacao: %lu\n", populacao2);
    printf("Area: %.2f\n", area2);
    printf("PIB: %.2f\n", pib2);
    printf("Pontos Turisticos: %d\n", pontos2);
    printf("Densidade Populacional: %.2f\n", densidade2);
    printf("PIB per Capita: %.2f\n", pibCapita2);
    printf("Super Poder: %.2f\n", superPoder2);

    // -----------------------------
    // Comparação das cartas
    // -----------------------------
    printf("\n=== Comparacao de Atributos ===\n");

    comparar("Populacao", populacao1, populacao2, 0);       // maior vence
    comparar("Area", area1, area2, 0);                      // maior vence
    comparar("PIB", pib1, pib2, 0);                         // maior vence
    comparar("Pontos Turisticos", pontos1, pontos2, 0);    // maior vence
    comparar("Densidade Populacional", densidade1, densidade2, 1); // menor vence
    comparar("PIB per Capita", pibCapita1, pibCapita2, 0); // maior vence
    comparar("Super Poder", superPoder1, superPoder2, 0);  // maior vence

    return 0;
}
